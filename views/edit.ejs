	<body>
		<p>Edit</p>
		<form name = "formPerson" id = "main" action = "/" method = "post">
			<div class="main">
			<div class="field">
				<label>Id Пациента</label>	
				<input type = "text" name = "Id" value = <%-Id%> hidden>
			</div>
			<div class="field">
				<label>Фамилия</label>	
				<input type = "text" name = "lastname" onchange="checkLast(name,value)" onkeypress="timer(name)"  value = <%-lNamne%>>
			</div>
			<div class="field">
				<label>Имя</label>
				<input type = "text" name = "firstname" onchange="checkFirst(name,value)" onkeypress="timer(name)"  value = <%-fNamne%>>	
			</div>
			<div class="field">
				<label>Отчество</label>
				<input type = "text" name = "secondtname" onchange="checkSecond(name,value)" onkeypress="timer(name)" value = <%-mNamne%>>
			</div>
			<div class="field">
				<label>Диагноз</label>
				<input type = "text" name = "diagnosis" onchange="checkSecond(name,value)" onkeypress="timer(name)" value = <%-diagnosis%>>
			</div>
			<div class="field">
				<label>Дата регистрации</label>
				<input type = "text" name = "dataRegistartion" onchange="checkSecond(name,value)" onkeypress="timer(name)" value = <%-dataRegistartion%>>
			</div>
			<div class="field">
				<input type = "button" class="btn btn-default" name = "sub" value = "Отправить" onClick = 'main()'>
			</div>
			<div>
				<P>Дополнительная информация:</P>
				<span id = "res"><span>
				<span id = "info"><span>
				<span id = "hint"><span>
			</div>	
		</div>
		</form>
		
